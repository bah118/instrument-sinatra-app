<h1>Create Instrument</h1>

<% if @errors %>
    <ul class="pink">
        <% @errors.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<form action="/instruments" method="post">
    <div class="input-field">
        <input placeholder="Placeholder" name="instrument[name]" id="instrument_name" type="text" class="validate">
        <label for="instrument_name">Instrument Name</label>
    </div>
    <input type="submit" value="Create Instrument" class="btn">
</form>